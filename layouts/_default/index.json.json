[{{- range $index, $e := .Site.RegularPages -}}
  {{- if $index -}}, {{- end -}}
    {
    "title": "{{ .Title | plainify }}",
    "date": "{{ substr .Params.date 0 10 | plainify }}",
    "description": "{{ .Params.description | plainify }}",
    "body": {{ .Content | plainify | jsonify }},
    "ref": "{{ .RelPermalink | plainify }}"
  }
{{- end -}}]
